\definecolor{uwgold}{rgb}{0.522, 0.459, 0.302}
\definecolor{orange}{rgb}{0.98824, 0.68627, 0.24314}		% #fcaf3e
\definecolor{uwpurple}{rgb}{0.294, 0.18, 0.514}

\setbeamercolor{headline}{bg=uwpurple}
\setbeamercolor{footline}{bg=uwpurple}
\setbeamerfont{footline}{size=\large}
\setbeamercolor{separation line}{bg=black}
\setbeamercolor{title in headline}{fg=white}
\setbeamercolor{author in headline}{fg=orange}
\setbeamercolor{institute in headline}{fg=lightgray}

\setbeamercolor{framesubtitle}{fg=blue, bg=gray}
\setbeamercolor{author in head/foot}{fg=orange,bg=uwpurple}
\setbeamercolor{title in head/foot}{fg=uwgold,bg=black}
\setbeamercolor{website in footline}{fg=white,bg=black}
\setbeamercolor{email in footline}{fg=uwgold,bg=black}

\setbeamercolor*{normal text}{fg=black, bg=white}
\setbeamercolor*{block body}{fg=black,bg=white}
\setbeamercolor*{block title}{fg=black,bg=lightgray}
\setbeamerfont{block title}{size=\large,series=\sc\bf}
\setbeamercolor{upper separation line head}{fg=black}

% \setbeamertemplate{blocks}[rounded][shadow=true]

